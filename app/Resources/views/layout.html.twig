<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}IAHM - International Association of Healing Ministries{% endblock %}</title>
    <!---->
    <meta name="viewport"
          content="initial-scale=1, width=device-width, minimum-scale=1, user-scalable=no, maximum-scale=1, width=device-width, minimal-ui">

<!--
    <meta name="viewport" content="height=device-height, initial-scale=1.0 maximum-scale=1.0">-->

    {% block meta %}{% endblock %}
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}"/>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}"/>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/layout.css') }}" type="text/css"/>
    {% endblock %}


    {% block javascripts %}
    <!-- Add vUnit.js to the head to avoid FOUC -->
    <!----><script type="text/javascript" src="{{ asset('vunit/vunit.js') }}"></script>
        <script src="//use.typekit.net/dqq8egl.js"></script>
        <script>try{Typekit.load();}catch(e){}</script>
    {% endblock %}

    <!-- Instantiate vUnit.js passing a CSSMap with properties you want to play with -->
    <script type="text/javascript">
        new vUnit({
            CSSMap: {
                '.vh': {
                    property: 'height',
                    reference: 'vh'
                },
                '.vw': {
                    property: 'width',
                    reference: 'vw'
                },
                '.vwfs': {
                    property: 'font-size',
                    reference: 'vw'
                },
                '.vhmt': {
                    property: 'margin-top',
                    reference: 'vh'
                },
                '.vhmb': {
                    property: 'margin-bottom',
                    reference: 'vh'
                },
                '.vminw': {
                    property: 'width',
                    reference: 'vmin'
                },
                '.vmaxw': {
                    property: 'width',
                    reference: 'vmax'
                }
            }
        }).init();
    </script>
</head>
<body>
    <header>
        <section id="ruban">
            <!---->
            <div id="logoRight"></div>
            <div id="logoLeft"></div>
            <!---->
            <nav class="main">
                <!---->
                <ul>
                    <li class="current">&nbsp;</li>
                    <li><a href="#presentation" target="_parent">Events</a></li>
                    <li><a href="#vision" target="_parent">Vision</a></li>
                    <li><a href="#mission" target="_parent">Mission</a></li>
                    <li class="lastItem"><a href="#contact" target="_parent">Contact</a></li>
                </ul>

            </nav>

        </section>
    </header>

<!---->
    <section class="page">
{% block body %}{% endblock %}
    </section>


<footer>
<section class="contact">
    <article><a name="contact"></a>
        <h3>Contact</h3>
            <p>
